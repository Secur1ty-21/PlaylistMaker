<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/content_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_margin_between_button</item>
        <item name="android:backgroundTint">?attr/backgroundMainButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnMainButton</item>
        <item name="android:textAppearance">@style/MediumTextView</item>
        <item name="cornerRadius">@dimen/main_button_radius</item>
        <item name="iconTint">?attr/colorOnMainButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
    </style>

    <style name="SettingActivityButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:backgroundTint">?attr/screenBackgroundColor</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textAppearance">@style/SmallText</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/primaryIconTint</item>
    </style>

    <style name="SmallButtonTextAppearance" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="MediumTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="SmallText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/yp_light_gray</item>
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorSurface">@color/yp_text_gray</item>
    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/screenBackgroundColor</item>
        <item name="navigationIconTint">?attr/primaryTextColor</item>
        <item name="titleTextColor">?attr/primaryTextColor</item>
        <item name="titleTextAppearance">@style/MediumTextView</item>
    </style>
</resources>