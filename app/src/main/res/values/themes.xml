<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryVariant">@color/yp_white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_white</item>
        <item name="colorSecondaryVariant">@color/yp_text_gray</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Yet another colors -->
        <item name="colorSurface">@color/yp_light_gray</item>
        <item name="colorOnSurface">@color/yp_text_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yp_blue</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="colorAccent">@color/yp_blue</item>
        <!-- EditText cursor color -->
        <item name="colorControlActivated">@color/yp_blue</item>
        <!-- Init attr -->
        <item name="mainScreenBackgroundColor">@color/yp_blue</item>
        <item name="colorOnMainButton">@color/yp_black</item>
        <item name="backgroundMainButton">@color/yp_white</item>
        <item name="toolbarTextColorMain">@color/yp_white</item>
        <item name="primaryTextColor">@color/yp_black</item>
        <item name="primaryTextColorOnButton">@color/yp_white</item>
        <item name="screenBackgroundColor">@color/yp_white</item>
        <item name="primaryIconTint">@color/yp_text_gray</item>
        <item name="secondaryIconTint">@color/yp_black</item>
        <item name="primaryHintColor">@color/yp_text_gray</item>
        <item name="searchEditTextBackgroundColor">@color/yp_light_gray</item>
        <item name="searchEditTextIconTint">@color/yp_text_gray</item>
        <item name="subtitleTrackTextColor">@color/yp_text_gray</item>
        <item name="playerBackgroundIconTint">@color/yp_black_25alpha</item>
        <item name="mediaNotFoundTextColor">@color/black</item>
        <item name="playlistMakerButtonTint">@color/yp_black</item>
        <item name="playlistMakerButtonTextColor">@color/yp_white</item>
        <item name="playlistMakerBottomNavActiveItemColor">@color/yp_blue</item>
        <item name="playlistMakerBottomNavInactiveItemColor">@color/yp_black</item>
        <item name="playlistMakerBottomNavBackgroundColor">@color/yp_white</item>
        <item name="playlistMakerBottomNavDividerColor">@color/yp_light_gray</item>
        <item name="playlistMakerEditTextStrokeColor">@color/yp_text_gray</item>
        <item name="playlistMakerSnackbarTint">@color/yp_black</item>
    </style>
</resources>