<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryVariant">@color/yp_white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_white</item>
        <item name="colorSecondaryVariant">@color/yp_text_gray</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Yet another colors -->
        <item name="colorSurface">@color/yp_light_gray</item>
        <item name="colorOnSurface">@color/yp_text_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yp_blue</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="colorAccent">@color/yp_blue</item>
    </style>
</resources>