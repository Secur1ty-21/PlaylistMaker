<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="13dp"
    android:paddingVertical="@dimen/contentPaddingXS">

    <ImageView
        android:id="@+id/playlist_cover"
        android:layout_width="@dimen/cover_s"
        android:layout_height="@dimen/cover_s"
        android:background="@drawable/shape_playlist_small_cover"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_track_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/contentPaddingXS"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_playlist_name"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/primaryTextColor"
            tools:text="Best songs 2021" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_playlist_size"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:textColor="?attr/subtitleTrackTextColor"
            android:textSize="@dimen/text_XS"
            tools:text="98 треков" />
    </LinearLayout>
</LinearLayout>